GET         /hello            controller.HelloController.hello

GET         /users            controller.UserController.findAllUsers()
GET         /users/:id        controller.UserController.findUserById(id: Int)
POST        /users            controller.UserController.create()
PUT         /users/:id        controller.UserController.update(id: Int)
GET         /users/bar/:id    controller.UserController.bar(id: Int)